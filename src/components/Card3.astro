---
const { url="#", cardtitel="", cardtekst="", cardimage="", cardimagealt="",  cardrating = 0  } = Astro.props; 
import Link from '../components/Link.astro';
import Heading from '../components/Heading.astro';
---

<div class="card w-full bg-orange-200 card-md shadow-sm">
  <div class="grid grid-cols-3 items-center px-6 pt-6 gap-4">
  <Heading htmlheading="h2" size="smallbold" stylingclasses="card-title col-span-2 justify-self-start">{cardtitel}</Heading>
  <img 
    class="w-10 h-10 justify-self-end object-contain col-span-1" 
    src={cardimage} 
    alt={cardimagealt} 
  />
</div>


  <!-- Card content -->
  <div class="card-body hover:scale-110 duration-300 ease-in-out">
    <p class="text-sm md:text-sm leading-relaxed tracking-normal font-normal font-serif">
      {cardtekst}
    </p>
  </div>
</div>

