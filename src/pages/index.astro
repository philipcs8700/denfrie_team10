---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
import Card2 from '../components/card2.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import heading from '../components/Heading.astro';
---
<MainLayout title="Den Frie">
  <section class="relative h-screen w-full overflow-hidden bg-black text-gold500 font-anton">
    <!-- Background Graphic -->
    <img src="/hero_bg.png" alt="P" class="absolute top-0 right-0 h-full w-3/7 object-cover z-0 hidden lg:block" />

    <!-- Logo -->
    <img src="/logo.png" alt="P" class="absolute top-1/2 left-3/5 transform -translate-x-1/2 -translate-y-1/2 h-3/5 w-auto object-cover z-10 hidden lg:block" />

    <!-- Text + Buttons -->
    <div class="relative z-10 h-full w-full flex flex-col justify-center px-6 sm:px-12 lg:max-w-5xl">
      <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-9xl leading-tight tracking-tight w-fit mb-4">DEN FRIE</h1>
      <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-9xl leading-tight tracking-tight w-fit mb-4">FRI KUNST</h1>
      <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-9xl leading-tight tracking-tight w-fit mb-10">FRIE STEMMER</h1>

      <div class="flex gap-4">
        <Link href="/form_1" variant="herobutton" size="large">Køb billet til udstillingen her</Link>
        <Link href="/social" variant="goldbutton" size="large">Se events her</Link>
      </div>
    </div>

    <!-- Opening Hours -->
    <div class="absolute bottom-8 right-8 bg-black text-white p-4 font-sans text-xs tracking-wide">
      <h2 class="font-bold text-sm mb-2">ÅBNINGSTIDER</h2>
      <p>MAN-TIRS: LUKKET</p>
      <p>ONS-FRE: 12.00 — 18.00</p>
      <p>TORS: 12.00 — 21.00</p>
      <p>LØR-SØN: 10.00 — 18.00</p>
    </div>
  </section>

  <!-- Aktuelle udstillinger -->
  <section id="destinationer" class="pt-20">
    <div class="pl-20">
      <h1 class="text-xl sm:text-xl md:text-6xl text-left text-neutral-950 font-poppins font-normal pb-4">Aktuelle udstillinger</h1>
    </div>
  </section>

  <div class="max-w-screen-xl mx-auto px-9">
    <div class="sm:grid-cols-2 md:grid-cols-3 gap-12 pt-8">
      <Card
        url="/majorworks"
        cardimage="majorworks.webp"
        cardimagealt="Trip 1"
        cardtitel="DEN FRIE UDSTILLING: MAJOR WORKS"
        cardtekst="Dato:"
        cardtekst2="26.04.25 — 01.06.25"
        cardtekst3="Tid:"
        cardtekst4="10.00"
        cardbuttontekst="Læs mere →"
        badgenyt="false"
        badgerabat="false"
        badgefaatilbage="false"
      />
    </div>
  </div>

  <!-- Årskort sektion -->
<a href="/form_1" aria-label="Køb årskort">
  <img src="/public/arskort.webp" alt="årskort" class="cursor-pointer" />
</a>


  <!-- Anmeldelse sektion -->
<section class="bg-white py-16 px-6 sm:px-12">
  <div class="max-w-screen-xl mx-auto">
    <h2 class="text-3xl sm:text-4xl font-bold font-poppins text-neutral-900 mb-10 text-center">Anmeldelser fra vores besøgende</h2>
    <div class="grid gap-8 md:grid-cols-3">
      <!-- Anmeldelse 1 -->
      <div class="bg-neutral-100 p-6 rounded-2xl shadow-lg">
        <div class="flex items-center mb-2">
          <span class="text-gold500 text-2xl">★★★★★</span>
        </div>
        <p class="text-lg text-neutral-800 mb-4 italic">"En dybt bevægende oplevelse – udstillingerne rammer både hjertet og intellektet."</p>
        <p class="text-sm font-semibold text-neutral-600">Signe</p>
      </div>
      <!-- Anmeldelse 2 -->
      <div class="bg-neutral-100 p-6 rounded-2xl shadow-lg">
        <div class="flex items-center mb-2">
          <span class="text-gold500 text-2xl">★★★★</span>
        </div>
        <p class="text-lg text-neutral-800 mb-4 italic">"Et fristed for kunstens frie stemmer. Den Frie er essentiel for dansk samtidskunst." Kan klart anbefales!</p>
        <p class="text-sm font-semibold text-neutral-600">Jacob</p>
      </div>
      <!-- Anmeldelse 3 -->
      <div class="bg-neutral-100 p-6 rounded-2xl shadow-lg">
        <div class="flex items-center mb-2">
          <span class="text-gold500 text-2xl">★★★★★</span>
        </div>
        <p class="text-lg text-neutral-800 mb-4 italic">"Kurateringen er i verdensklasse. En oplevelse jeg vender tilbage til igen og igen."</p>
        <p class="text-sm font-semibold text-neutral-600">Jette</p>
      </div>
    </div>
    <div class="mt-10 text-center">
      <Link
        href="https://www.tripadvisor.dk/Attraction_Review-g189541-d246334-Reviews-Den_Frie-Copenhagen_Zealand.html"
        size="large"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block bg-black text-white px-6 py-3 rounded-md font-semibold transition-colors duration-300 hover:bg-gold500 hover:text-black"
      >
        Se flere anmeldelser
      </Link>
    </div>
  </div>
</section>


  <!-- Kommende udstillinger -->
  <section id="destinationer" class="pt-20">
    <div class="flex items-left space-x-4">
      <h1 class="text-xl sm:text-xl md:text-6xl text-left text-neutral-950 font-poppins font-normal pb-6 sm:pb-12 pl-20">Kommende udstillinger</h1>
    </div>

    <div class="max-w-screen-xl mx-auto px-9">
      <div class="sm:grid-cols-2 md:grid-cols-3 gap-12 pt-8">
        <Card
          url="/icepleasure"
          cardimage="icepleasure.webp"
          cardimagealt="Trip 1"
          cardtitel="OSLO: SIAN KRISTOFFERSEN: ICE-PLEASURE"
