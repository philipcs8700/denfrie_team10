---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
---
<MainLayout title="Titel">

  <div class="max-w-6xl mx-auto p-6 pt-40 font-archivo">
    <!-- Step navigation -->
    <div class="flex justify-between items-center text-xs font-bold tracking-widest uppercase border-b pb-4 mb-6">
      <div class="flex items-center gap-2">
        <div class="w-6 h-6 rounded-full bg-black text-white flex items-center justify-center">1</div>
        Kurv
      </div>
      <div class="flex items-center gap-2 text-gray-400">
        <div class="w-6 h-6 rounded-full border border-black text-black flex items-center justify-center">2</div>
        Login
      </div>
      <div class="flex items-center gap-2 text-gray-400">
        <div class="w-6 h-6 rounded-full border border-black text-black flex items-center justify-center">3</div>
        Betaling
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-start">
      <!-- Left: image and event info -->
      <div>
        <img src="majorworks.webp" alt="Performance" class="rounded-lg mb-4" />
        <h2 class="text-2xl font-bold uppercase">Kristoffer Akselbo FEAT. LEO</h2>
        <div class="mt-2 text-sm text-gray-600 flex items-center gap-4">
          <span>23.01.26 — 03.05.26</span>
          <span>17.00</span>
        </div>
        <div class="mt-4 flex gap-0.5">
          <img src="/public/mastercard.png" class="h-12 w-auto" />
          <img src="/public/visa.png" class="h-12 w-auto" />
          <img src="/public/googlepay.png" class="h-12 w-auto" />
          <img src="/public/paypal.png" class="h-12 w-auto" />
          <img src="/public/applepay.png" class="h-12 w-auto" />
        </div>
      </div>

      <!-- Right: ticket form -->
      <form class="space-y-6">
        <div class="flex justify-between items-center border-b pb-2">
          <div>
            <p class="uppercase font-bold text-sm">Pris</p>
            <p class="text-lg font-semibold">395 DKK</p>
          </div>
          <select class="border rounded-full px-4 py-1 bg-black text-white">
            <option>0</option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
          </select>
        </div>
        <div class="flex justify-between items-center border-b pb-2">
          <div>
            <p class="uppercase font-bold text-sm">18 - 25 år</p>
            <p class="text-lg font-semibold">300 DKK</p>
          </div>
          <select class="border rounded-full px-4 py-1 bg-black text-white">
            <option>0</option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
          </select>
        </div>
        <div class="flex justify-between items-center border-b pb-2">
          <div>
            <p class="uppercase font-bold text-sm">Studerende</p>
            <p class="text-lg font-semibold">250 DKK</p>
          </div>
          <select class="border rounded-full px-4 py-1 bg-black text-white">
            <option>0</option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
          </select>
        </div>
        <div class="flex justify-between items-center border-b pb-2">
          <div>
            <p class="uppercase font-bold text-sm">Pensionist +60 år</p>
            <p class="text-lg font-semibold">280 DKK</p>
          </div>
          <select class="border rounded-full text-left px-4 py-1 bg-black text-white">
            <option>0</option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
          </select>
        </div>
        <!-- Ny tilføjelse: Årskort -->
        <div class="flex justify-between items-center border-b pb-2">
          <div>
            <p class="uppercase font-bold text-sm">ÅRSKORT</p>
            <p class="text-lg font-semibold">1250 DKK</p>
          </div>
          <select class="border rounded-full text-left px-4 py-1 bg-black text-white">
            <option>0</option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
          </select>
        </div>

        <Link href="/form_2" variant="primary" size="medium">
          Tilføj til kurv
        </Link>
      </form>
    </div>
  </div>

</MainLayout>
